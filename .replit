modules = ["android", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App"

[[workflows.workflow]]
name = "Android App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew installDebug && adb forward tcp:5000 tcp:5000 && adb shell am start -n com.example.sitemonitor/.MainActivity"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "./gradlew installDebug && adb forward tcp:5000 tcp:5000 && adb shell am start -n com.example.sitemonitor/.MainActivity"]
